<% item_total = item.item_price * item.quantity %>
<% @order_total += item_total %>

<tr>
  <td>
    <%= image_tag item.image.tiny %>
  </td>
  <td>
    <h4><%= item.name %></h4>
    <br>
    <p><%= item.description %></p>
  </td>
  <td>
    <%= humanized_money_with_symbol item.item_price %>
  </td>
  <td>
    <%= item.quantity %>
  </td>
  <td>
    <%= humanized_money_with_symbol item_total %>
  </td>
</tr>
