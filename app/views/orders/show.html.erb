<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h3>Thank you for your order <%= current_user.first_name %> <%= current_user.last_name %>!</h3>
    <h4>Your order details have been sent to <%= current_user.email %></h4>

    <div class="panel panel-default items">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th colspan="2">Product</th>
            <th>Unit Price</th>
            <th>Quantity</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_total = 0 %>
          <% @items.each do |item| %>
            <%= render 'item', item: item %>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th colspan="4" class="order-total">
              TOTAL:
            </th>
            <th>
              <%= humanized_money_with_symbol @cart_total %>
            </th>
          </tr>
        </tfoot>
      </table>
    </div>
    
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
