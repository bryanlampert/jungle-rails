<h1 class="reg-title"> Walk back into the JUNGLE!</h1>
<h6 class="reg-title"> Log in using the below form:</h6>
<br>

<%= form_tag '/login', class: "login-form" do %>
  <dl>
    <dt>Email:</dt>
    <dd><%= text_field_tag :email, nil, placeholder: "Enter your email" %></dd>
    <dt>Password:</dt>
    <dd><%= password_field_tag :password, nil, placeholder: "Enter your password" %></dd>
  </dl>
  <%= submit_tag "Submit", class: "btn btn-primary submit_login" %>

<% end %>
